<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UHK.MatejVlk.HorolezeckyPruvodce.App">
    <Application.Resources>

        <!-- Application resource dictionary -->
        <ResourceDictionary>
            <Color x:Key="PrimaryColor">#003f82</Color>
            <Color x:Key="PrimaryDarkColor">#001123</Color>
            <Color x:Key="PrimaryLightColor">#C4E0FF</Color>
            <Color x:Key="AccentColor">#007bff</Color>

            <Color x:Key="PrimaryTextColor">#212121</Color>
            <Color x:Key="SecondaryTextColor">#757575</Color>
            <Color x:Key="IconsColor">#ffffff</Color>
            <Color x:Key="DividerColor">#BDBDBD</Color>

            <x:Double x:Key="ListFontSize">20</x:Double>
            <x:Double x:Key="SeparatorHeight">1</x:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>